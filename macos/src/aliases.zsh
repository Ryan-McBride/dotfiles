alias v="nvim"
alias vrc="nvim ~/.config/nvim/init.lua"
alias prof="nvim -p ~/.zshrc ~/.oh-my-zsh/custom/profile.zsh ~/.oh-my-zsh/custom/aliases.zsh"
alias rprof="source ~/.zshrc"

alias work="cd ~/Workspace"
alias config="cd ~/.config/"
alias µsync="cd ~/Sync/"

alias gii="git commit --no-verify"
alias ga="git add"
alias gs="git status"

# µ is the preferred alias modifier
alias µnext="git clone git@github.com:Ryan-McBride/next-rat.git"
alias µink="npx create-ink-app --typescript"
alias µmarp="npx @marp-team/marp-cli@latest -w"
